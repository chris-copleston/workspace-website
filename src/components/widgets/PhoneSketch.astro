  .phone-sketch-container .container .phone-shape .graphic-guides .left {
    height: calc(100% + var(--sketch-width) * 2);
    width: var(--sketch-width);
    left: calc(-1 * var(--sketch-width));
    top: calc(-1 * var(--sketch-width));
  }

  .phone-sketch-container .container .phone-shape .graphic-guides .center {
    width: var(--sketch-width);
    left: 50%;
    margin-left: calc(-1 * var(--sketch-width) / 2);
    top: calc(-1 * var(--sketch-width));
  }

  .phone-sketch-container .container .phone-shape .graphic-guides .top,
  .phone-sketch-container .container .phone-shape .graphic-guides .bottom {
    ::before {
      content: " ";
      font-size: 0;
      position: absolute;
      top: 0;
      left: calc(-1 * var(--sketch-fade-length));
      width: var(--sketch-fade-length);
      height: inherit;
      background: linear-gradient(to right, transparent, var(--guides-color));
    }
    ::after {
      content: " ";
      font-size: 0;
      position: absolute;
      top: 0;
      right: calc(-1 * var(--sketch-fade-length));
      width: var(--sketch-fade-length);
      height: inherit;
      background: linear-gradient(to right, var(--guides-color), transparent);
    }
  }

  .phone-sketch-container .container .phone-shape .graphic-guides .right,
  .phone-sketch-container .container .phone-shape .graphic-guides .center,
  .phone-sketch-container .container .phone-shape .graphic-guides .left {
    ::before {
      content: " ";
      font-size: 0;
      position: absolute;
      right: 0;
      top: calc(-1 * var(--sketch-fade-length));
      height: var(--sketch-fade-length);
      width: inherit;
      background: linear-gradient(to bottom, transparent, var(--guides-color));
    }
    ::after {
      content: " ";
      font-size: 0;
      position: absolute;
      right: 0;
      bottom: calc(-1 * var(--sketch-fade-length));
      height: var(--sketch-fade-length);
      width: inherit;
      background: linear-gradient(to bottom, var(--guides-color), transparent);
    }
  }

  .phone-sketch-container.flat .container {
    perspective: 2400px;
    position: absolute;
    left: 0;
    top: 0;
  }

  .phone-sketch-container.flat .container .phone-shape {
    transform: rotateX(0) rotateY(0) rotateZ(0) !important;
  }

  .phone-sketch-container.flat .container .phone-shape .phone-display iframe {
  }

  .phone-sketch-container.flat .controls {
    position: absolute;
    top: 20px;
    right: 20px;
  }

  .phone-sketch-container.flat .controls span {
    cursor: default;
    font-family: sans-serif;
    padding: 8px 20px;
    border-radius: 2px;
    background: #fff;
    color: #333;
  }
</style>