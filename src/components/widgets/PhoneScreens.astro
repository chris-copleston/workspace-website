const getZIndex = (index: number) => {
  const position = index + 1;
  // Default z-index values (4 phones per row)
  const zIndexMap = {
    1: 7,
    2: 6,
    3: 5,
    4: 4,
    5: 70,
    6: 60,
    7: 50,
    8: 40
  };
  return zIndexMap[position] || 1;
